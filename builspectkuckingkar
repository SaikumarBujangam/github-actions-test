{
  "Version": "2012-10-17",
  "Id": "mycompliantpolicy",
  "Statement": [
    {
      "Sid": "HTTPSOnly",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "{{ bucket_arn }}",
        "{{ bucket_arn }}/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    }
  ]
}


resource "aws_iam_policy" "mycompliantpolicy" {
  name   = "mycompliantpolicy"
  policy = templatefile("${path.module}/mycompliantpolicy.tpl", {
    bucket_arn = aws_s3_bucket.mycompliantbucket.arn
  })
}
