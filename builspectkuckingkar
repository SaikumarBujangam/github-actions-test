global_secondary_indexes = can(local.tables[each.key].global_secondary_indexes) ? local.tables[each.key].global_secondary_indexes : []


variable "global_secondary_indexes" {
  description = "List of Global Secondary Indexes"
  type        = list(object({
    range_key = string
    name      = string
    hash_key  = string
    projection_type = string
  }))
  default = null
}
