resource "aws_sqs_queue_policy" "code_sync_queue_policy" {
  queue_url = aws_sqs_queue.code_sync_queue.id
  policy    = <<POLICY
{
  "Version": "2008-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "SQS:*",
      "Resource": "${aws_sqs_queue.code_sync_queue.arn}"
    }
  ]
}
POLICY
}
