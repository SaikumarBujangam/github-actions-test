jobs:
  adl-cicd-hotfix:
    if: github.event_name == 'push' && startsWith(github.ref, 'refs/heads/hotfix/')
    runs-on: ubuntu-latest
    steps:
      - name: Wait for Deployment Approval
        uses: actions/wait-for-deployment-approval@v1
        with:
          environment: hotfix
          
      - name: Deploy Hotfix
        run: |
          echo "Deploying hotfix..."
          # Insert your deployment commands here
