resource "aws_route_table" "private" {
  # count = var.create_vpc && var.enable_nat_gateway ? local.nat_gateway_count : 0
  count = var.create_vpc && var.enable_nat_gateway ? local.nat_gateway_count : 1

  vpc_id = aws_vpc.this[0].id

  tags = merge(
    {
      "Name" = format("%s%s%s", local.vpc_name,"_",var.resource_names["private_rt_name"])

    },
    var.tags,
    var.private_route_table_tags,
  )
}


resource "aws_route" "private_nat_gateway" {
  count = var.create_vpc && var.enable_nat_gateway ? local.nat_gateway_count : 0

  route_table_id         = element(aws_route_table.private.*.id, count.index)
  destination_cidr_block = "0.0.0.0/0"
  nat_gateway_id         = element(aws_nat_gateway.this.*.id, count.index)

  timeouts {
    create = "5m"
  }
}

resource "aws_route" "transit_gateway" {
  count = var.create_vpc && var.enable_transit_gateway ? 1 : 0

  route_table_id         = element(aws_route_table.private.*.id, count.index)
  
  destination_cidr_block = var.mgmt_subnet_cidr_block
  transit_gateway_id     = var.transit_gateway_id

  timeouts {
    create = "5m"
  }
}

