#EFS Mount starts
resource "aws_route" "mgmt_pvt_rt" {
  count = var.mgmt_private_rtb_update ? 1 : 0

  route_table_id         = var.region_mgmt_pvt_rtb_id
  
  #2492
  destination_cidr_block = var.cidr
  transit_gateway_id     = var.transit_gateway_id

  timeouts {
    create = "5m"
  }
}
#EFS Mount ends

#Domain Join Return Route Starts
resource "aws_route" "update_mgmt_vpc_default_route_proj_cidr" {
  count                     = var.mgmt_default_rtb_update ? 1 : 0
  route_table_id            = var.app_region_mgmt_default_rtb_id
  destination_cidr_block    = var.cidr
  transit_gateway_id        = var.app_region_transit_gateway_id
}
#Domain Join Return Route ends
