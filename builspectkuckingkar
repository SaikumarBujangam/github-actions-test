version: 0.2

phases:
  install:
    runtime-versions:
      java: corretto17
  pre_build:
    commands:
      - export CODEARTIFACT_AUTH_TOKEN=`aws codeartifact get-authorization-token --domain common --domain-owner 195227247767 --region eu-central-1 --query authorizationToken --output text`
      - echo $CODEARTIFACT_AUTH_TOKEN
  build:
    commands:
      - mvn --no-transfer-progress versions:set -DnewVersion="0.0.1-SNAPSHOT"
      - mvn --no-transfer-progress -s settings.xml clean package deploy

artifacts:
  files:
    - target/*.jar
