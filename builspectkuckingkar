name: ADL CICD Deploy Repo Phase

on:
  workflow_call:
    types:
      - dispatched

inputs:
  envPAT:
    description: 'Personal Access Token for repository access'
    required: true
  event_repo_name:
    description: 'Name of the repository where the event originated'
    required: true
  calling_repo_name:
    description: 'Name of the repository that made the request'
    required: true
  dispatch_repo_name:
    description: 'Name of the repository being dispatched'
    required: true

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Log input variables
        run: |
          echo "Event Repo Name: ${{ inputs.event_repo_name }}"
          echo "Calling Repo Name: ${{ inputs.calling_repo_name }}"
          echo "Dispatch Repo Name: ${{ inputs.dispatch_repo_name }}"
