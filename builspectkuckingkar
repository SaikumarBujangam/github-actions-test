# DO NOT MODIFY OR DELETE THIS WORKFLOW!!

name: ADL CICD Initiate Deployment

on:
  pull_request:
    branches: [ master ]
    types: [opened, reopened, edited]
  push:
    branches: [master, feature/* ]
    paths-ignore:
      - '.version'
      - '.github/**'
      - 'Explore/**'
      - 'README.md'
      - 'CODEOWNERS'
      - '.group'
  workflow_dispatch:
    inputs:
      deploy_env:
        description: 'Deployment Environment (e.g., qa, qc)'
        required: true
        type: choice
        options:
          - 'qa'
          - 'qc'      
jobs:
  adl-cicd-check-pull-request:
    if: github.event_name == 'pull_request'
    uses: AlightEngineering/adl-awsdeploy-cicd/.github/workflows/adl-cicd-check-pull-request.yml@master
    secrets:
      envPAT: ${{ secrets.REPO_PAT }}

  adl-cicd-deploy-phase:
    if: github.event_name == 'push' || github.event_name == 'workflow_dispatch'
    uses: AlightEngineering/adl-awsdeploy-cicd/.github/workflows/adl-cicd-deploy-repo-phase.yml@feature/workflowrefactor
    secrets: inherit
    with:
      event_repo_name: ${{ github.repository }}
      event_repo_branch: ${{ github.ref_name }}
      deploy_env: ${{ github.event_name == 'workflow_dispatch' && github.event.inputs.deploy_env || (github.event.pull_request.merged == 'true' ) && 'prod' || 'dev' }}
      
  adl-log-event:
    runs-on: ubuntu-latest
    steps:
      - name: Default
        run: |
          echo ${{ github.event_name }}
