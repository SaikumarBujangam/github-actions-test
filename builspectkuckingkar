name: Manual ADL Deploy Postgres Artifacts

on:
  workflow_dispatch:
    inputs:
      name:
        description: 'Repository name to deploy'
        required: true
      cicd_version:
        description: 'CICD version'
        required: true
      branch:
        description: 'Repository branch'
        required: true

jobs:
  adl-postgres-deploy:
    env:
      event_repo_name: ${{ github.event.inputs.name }}
      cicd_version: ${{ github.event.inputs.cicd_version }}
      event_repo_branch: ${{ github.event.inputs.branch }}
      calling_repo_name: ${{ github.repository.full_name }}
      dispatch_repo_name: 'adl-awsdeploy-cicd' # Updated from ${{ 'adl-awsdeploy-cicd' }}

    # Rest of the steps remain unchanged...
