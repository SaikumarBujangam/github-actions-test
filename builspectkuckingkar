##########################
# creating Lambda Function
###########################


resource "aws_lambda_function" "ingress-streams-processing-lambda" {
  function_name = var.lambda_function_name
  description   = "Dynamodb stream processing"
  memory_size   = "512"
  timeout       = "300"
  ephemeral_storage {
    size = "2048"
  }
  role         = aws_iam_role.lambda_role.arn
  runtime      = "python3.9"
  handler      = "lambda_function.lambda_handler"
  filename     = "lambda_function.zip" 
}

resource "aws_lambda_event_source_mapping" "dynamodb_stream_lambda_mapping" {
  
  event_source_arn       = var.data_ingress_table_stream_arn
  function_name          = aws_lambda_function.ingress-streams-processing-lambda.arn
  maximum_retry_attempts = var.maximum_retry_attempts
  starting_position      = "LATEST"
}
