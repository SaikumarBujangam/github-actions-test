name: ADL CICD Deploy To QC From Master Pipeline

on:
  workflow_dispatch:
    inputs:
      deploy_env:
        description: 'Deployment Environment'
        required: true
        type: choice
        options:
          - 'qc'

jobs:
  adl-cicd-deploy-to-qc-from-prod-approval:
    if: github.event_name == 'workflow_dispatch' && github.ref == 'refs/heads/master' && github.event.inputs.deploy_env == 'qc'
    runs-on: ubuntu-latest
    environment: admin
    steps:
      - name: Awaiting CICD Core Admins Deployment Approval
        run: echo "Awaiting CICD Core Admins Deployment Approval . . ." 

  adl-cicd-deploy-to-qc-from-prod-deploy-phase:
    if: github.event_name == 'workflow_dispatch' && github.event.inputs.deploy_env == 'qc'
    uses: AlightEngineering/adl-deploy-cicd/.github/workflows/adl-cicd-deploy-repo-phase.yml@master
    secrets: inherit
    with:
      event_repo_name: ${{ github.repository }}
      event_repo_branch: ${{ github.ref_name }}
      deploy_env: ${{ github.event.inputs.deploy_env }}


  adl-log-event:
    if: github.event_name == 'workflow_dispatch' && github.event.inputs.deploy_env == 'qc'
    runs-on: ubuntu-latest
    needs: [adl-cicd-deploy-to-qc-from-prod-approval, adl-cicd-deploy-to-qc-from-prod-deploy-phase]
    steps:
      - name: Log Deployment Information
        run: |
          echo "Workflow Dispatched for Deployment"
          echo "Event Name: ${{ github.event_name }}"
          echo "Repository: ${{ github.repository }}"
          echo "Branch: ${{ github.ref }}"
          echo "Deployment Environment: ${{ github.event.inputs.deploy_env }}"
