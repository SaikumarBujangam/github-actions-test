resource "aws_route53_record" "validation_v2" {
  count = var.create_v2_certifcate ? length(aws_acm_certificate.certificate_v2[0].domain_validation_options) : 0
  
  name            = aws_acm_certificate.certificate_v2[0].domain_validation_options[count.index].resource_record_name
  type            = aws_acm_certificate.certificate_v2[0].domain_validation_options[count.index].resource_record_type
  zone_id         = data.aws_route53_zone.hosted_zone_v2.id
  records         = [aws_acm_certificate.certificate_v2[0].domain_validation_options[count.index].resource_record_value]
  ttl             = "60"
  allow_overwrite = true
}
