# Define the attributes dynamically based on global_secondary_indexes
dynamic "attribute" {
  for_each = var.global_secondary_indexes[*].hash_key, var.global_secondary_indexes[*].range_key
  content {
    name = attribute.key
    type = attribute.value == "RANGE" ? "S" : "N"  # Set type based on whether it's a range key or not
  }
}
