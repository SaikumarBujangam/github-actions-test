resource "local_file" "config" {
  content = templatefile("${path.module}/template/config-template.tpl", {
    region = var.region,
    x_navify_tenant=var.x_navify_tenant,
    okta_config=var.okta_config
  })
  filename = "${path.module}/python/config.py"
}

data "archive_file" "python_lambda_package" {
  type        = "zip"
  source_dir  = "${path.module}/python/"
  output_path = "navify-oidc-auth.zip"
  depends_on = [
    local_file.config
  ]
}

resource "aws_lambda_function" "navify_access_token_lambda" {
  function_name    = "navify-oidc-auth"
  filename         = "navify-oidc-auth.zip"
  source_code_hash = data.archive_file.python_lambda_package.output_base64sha256
  role             = aws_iam_role.lambda_role.arn
  runtime          = "python3.9"
  handler          = "lambda_function.lambda_handler"
  timeout          = 10
}
