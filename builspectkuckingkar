resource "aws_cloudwatch_dashboard" "opensearch_metrics_dashboard" {
  dashboard_name = "OpenSearchMetricsDashboard"
  dashboard_body = jsonencode({
    widgets = [
      {
        type = "metric",
        x    = 0,
        y    = 0,
        width  = 12,
        height = 6,
        properties = {
          metrics = [
            ["AWS/OpenSearch", "SearchRequestRate", "DomainName", "${aws_opensearch_domain.example.domain_name}"],
            ["AWS/OpenSearch", "SearchRequestLatency", "DomainName", "${aws_opensearch_domain.example.domain_name}"],
            ["AWS/OpenSearch", "SearchOCU", "DomainName", "${aws_opensearch_domain.example.domain_name}"]
          ],
          title = "OpenSearch Metrics",
          view = "timeSeries",
          stacked = false,
          region = "us-east-1"  # Specify your region here
        }
      }
    ]
  })
}
