resource "aws_security_group" "notebook_security_group" {
  name        = "notebook-security-group"
  description = "Security group for Amazon SageMaker Notebook Instance"

  # Inbound rules (allow traffic to the notebook instance)
  # Example: Allow SSH (port 22) and HTTPS (port 443) access from anywhere
  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]  # Replace with a more restrictive IP range if needed
  }

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]  # Replace with a more restrictive IP range if needed
  }

  # Outbound rules (allow traffic from the notebook instance)
  # Example: Allow all outbound traffic to anywhere
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"  # All protocols
    cidr_blocks = ["0.0.0.0/0"]  # Replace with a more restrictive IP range if needed
  }
}

output "security_group_id" {
  value = aws_security_group.notebook_security_group.id
}
